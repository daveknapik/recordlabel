<div class="artist">
	<h1><%= @artist.name %></h1>
	<p><%= @artist.bio %></p>
	<p><%= link_to	'Edit', edit_artist_path(@artist) %></p>
</div>

<hr>

<h2>Releases</h2>

<%- if @artist.releases.empty? -%>
	<p>This artist has no releases.</p>
<%- else -%>
	<%= render :partial => "releases/release", :collection => @artist.releases, :locals => {:release_class => "artistsreleases"} %>
<%- end -%>