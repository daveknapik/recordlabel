<%= form_for @release do |f| %>
<fieldset>
	<ol>
		<li>
			<%= f.label :artist_name, "Artist" %>
			<%= f.text_field :artist_name %>
		</li>
		<li>
			<%= f.label :title %>
			<%= f.text_field :title %>
		</li>
		<li>
			<%= f.label :description %>
			<%= f.text_area :description %>
		</li>
		<li>
			<%= f.label :duration %>
			<%= f.text_field :duration %>
		</li>
		<li>
			<%= f.label :catalogue_number, "Catalogue Number" %>
			<%= f.text_field :catalogue_number %>
		</li>
	</ol>
</fieldset>
<fieldset>
	<%= submit_tag "Submit", :id =>"submit-btn" %>
</fieldset>
<% end %>